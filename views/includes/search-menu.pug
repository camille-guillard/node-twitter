div(class="search-menu d-flex flex-column")
  if users && users.length
    each user in users
      a(href="/users/"+user.username class="search-menu-item d-flex flex-row align-items-center")
        img(width="40" height="40" class="p-1" src=user.avatar)
        span(class="pl-3")= user.username
  else
    span(class="pl-3") Aucun utilisateur