extends ../layout

block content
  div(class="d-flex flex-row content mx-auto")
    div(class="profile-container")
      include ../includes/profile
    div(class="flex-fill")
      form(class="card" method="post" action="/api/tweets")
        div(class="card-header") Ecrire un Tweet
        div(class="card-body")
          div(class="form-group")
            textarea(class="form-control" name="content" maxlength="280" rows="4" placeholder="What is happening?")
          if errors
            ul(class="my-2")
              each error in errors
                li(class="text-danger")= error
          div(class="w-100" style="margin-top: 20px;")
            input(type="submit" value="Send" class="btn btn-primary ml-auto d-block")
      